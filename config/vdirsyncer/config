[general]
status_path = "~/.config/vdirsyncer/status"

[pair my_calendar]
a = "google_calendar_remote"
b = "google_calendar_local"
collections = ["from a", "from b"]
conflict_resolution = "a wins"

[storage google_calendar_remote]
type = "google_calendar"
token_file = "~/.config/vdirsyncer/google_token"
client_id.fetch = ["command", "secret-tool", "lookup", "application", "vdirsyncer", "key", "client_id"]
client_secret.fetch = ["command", "secret-tool", "lookup", "application", "vdirsyncer", "key", "client_secret"]

[storage google_calendar_local]
type = "filesystem"
path = "~/.calendars/"
fileext = ".ics"
